{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"esnext",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"../node_modules",
		"dist"
	]
}