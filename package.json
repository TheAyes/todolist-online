{
	"name": "todo-app-lite",
	"version": "1.0.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"install:api": "pnpm install --prefix ./api",
		"install:client": "pnpm install --prefix ./client",
		"install:both": "pnpm install --prefix ./api && pnpm install --prefix ./client",
		"build:api": "pnpm run build --prefix ./api",
		"build:client": "pnpm run build --prefix ./client",
		"build:both": "pnpm run build --prefix ./api && pnpm run build --prefix ./client"
	},
	"dependencies": {
		"dotenv": "^16.1.4"
	},
	"devDependencies": {
		"typescript": "^5.1.3"
	}
}
